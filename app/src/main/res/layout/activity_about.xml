<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingTop="50dp"
            android:layout_marginStart="100dp"
            app:srcCompat="@drawable/sg" />

        <TextView
            android:id="@+id/we"
            android:layout_width="386dp"
            android:layout_height="227dp"
            android:layout_marginStart="15dp"
            android:paddingTop="40dp"
            android:textSize="16sp"
            android:scrollbarSize="@android:dimen/dialog_min_width_minor"
            android:text="     We are students of the Faculty of Computer  in Qunfudhah
We presented this app as a graduation project We are keen on aspects of user interfaces and improving the user experience , Trying to be the outcome of our study
comprehensive in this work , The work will be a reference for college students
in the coming years.
    "
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/worker"
            android:layout_width="251dp"
            android:layout_height="121dp"
            android:layout_marginStart="15dp"
            android:text="The team for this project:
            \n  Alaa  Al-maashi \n Amal  Al-Nashri
\n Fatimah  kreadam \n Maryam Al-Zubaidi \n  Shqraa  Al-Sayed"
            android:textColor="@color/colorPrimaryDarka" />

        <TextView
            android:id="@+id/supervisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Under the supervision of the professor: Hafiza Ben Othmen"
            android:textColor="@color/colorRed" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>