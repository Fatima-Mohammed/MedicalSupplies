<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manage_request_donor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="223dp">


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/dr" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="       My Requst"
            android:textColor="@color/colorPrimaryDarka"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/DD"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/colorButtonNormal"
                android:popupBackground="?attr/colorButtonNormal"
                android:textColor="@color/colorRed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/appD"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="#83009688"
                android:onClick="Delet_appontmen_donor"
                android:scrollbarThumbHorizontal="@color/colorPrimary"
                android:text="Delet" />

            <Button
                android:id="@+id/appDoctor2"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:width="@android:dimen/app_icon_size"
                android:background="#83009688"
                android:onClick="back_appontmen_donor"
                android:scrollbarThumbHorizontal="@color/colorPrimary"
                android:text="BACK" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



